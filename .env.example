# Financial Intelligence Platform - Environment Configuration
# Copy this file to .env and fill in your actual values
#
# NEVER commit .env to version control!

# =============================================================================
# Database Settings
# =============================================================================
POSTGRES_PASSWORD=your_secure_password_here

# =============================================================================
# LLM Provider API Keys
# =============================================================================

# Google Gemini (Required for RAG embeddings)
# Get key from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_gemini_api_key_here

# Groq (Optional - ultra-fast inference)
# Get key from: https://console.groq.com/keys
# Free tier: 14,400 requests/day
GROQ_API_KEY=your_groq_api_key_here

# OpenRouter (Optional - access to 100+ models)
# Get key from: https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Hugging Face (Optional - for local/hosted models)
# Get key from: https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=your_hf_api_key_here

# =============================================================================
# LLM Model Configuration
# =============================================================================

# Gemini model (default: gemini-2.5-flash)
GEMINI_MODEL=models/gemini-2.5-flash
GEMINI_MAX_TOKENS=8192

# Groq model (default: llama-3.3-70b-versatile)
GROQ_MODEL=llama-3.3-70b-versatile
GROQ_MAX_TOKENS=4096

# OpenRouter model (default: qwen3-coder free tier)
OPENROUTER_MODEL=qwen/qwen3-coder:free
OPENROUTER_MAX_TOKENS=4096

# =============================================================================
# AWS Configuration (Optional - for S3 data lake)
# =============================================================================
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-transaction-data-bucket
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# =============================================================================
# Application Settings
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# RAG system
VECTOR_STORE_TYPE=chromadb
EMBEDDING_MODEL=all-MiniLM-L6-v2
CHUNK_SIZE=512
CHUNK_OVERLAP=50

# =============================================================================
# Development Settings (Optional)
# =============================================================================

# Set to 'true' to enable debug mode
DEBUG=false

# Python environment
PYTHONUNBUFFERED=1

# =============================================================================
# Notes:
# =============================================================================
# 
# Required for basic functionality:
#   - POSTGRES_PASSWORD
#   - GOOGLE_API_KEY (for Gemini embeddings in RAG system)
#
# Optional but recommended:
#   - GROQ_API_KEY (for fast inference)
#   - OPENROUTER_API_KEY (for model diversity)
#
# The system will automatically fall back between LLM providers
# if one is unavailable or rate-limited.
#
